<main class="container mx-auto">
  <div class="bg-blue-500 text-white p-4 rounded-lg" phx-click="lv:clear-flash" phx-value-key="info">
    <%= live_flash(@flash, :info) %>
  </div>
  <div class="bg-red-500 text-white p-4 rounded-lg" phx-click="lv:clear-flash" phx-value-key="error">
    <%= live_flash(@flash, :error) %>
  </div>
  <%= @inner_content %>
</main>